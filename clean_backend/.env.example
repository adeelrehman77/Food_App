# =============================================================================
# Fun Adventure Kitchen - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit the .env file to version control.
# =============================================================================

# --- Django Core ---
DJANGO_ENV=development                  # development | production
DJANGO_SECRET_KEY=your-secret-key-here  # Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SETTINGS_MODULE=config.settings.development

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://kitchen_user:your_password@localhost:5432/kitchen_production
# Or use individual variables:
DB_NAME=kitchen_production
DB_USER=kitchen_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# --- Redis ---
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# --- Security Tokens ---
SYNC_TOKEN=generate-a-strong-random-token
ENCRYPTION_KEY=                         # Auto-generated if not set (recommended to set explicitly)

# --- CORS / Hosts (comma-separated, production only) ---
ALLOWED_HOSTS=kitchen.funadventure.ae,www.kitchen.funadventure.ae,api.kitchen.funadventure.ae
CSRF_TRUSTED_ORIGINS=https://kitchen.funadventure.ae,https://www.kitchen.funadventure.ae
CORS_ALLOWED_ORIGINS=https://kitchen.funadventure.ae,https://www.kitchen.funadventure.ae

# --- Email (production only) ---
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=no-reply@kitchen.funadventure.ae
ADMIN_EMAILS=admin@kitchen.funadventure.ae

# --- WhatsApp API (optional) ---
WHATSAPP_PHONE_ID=
WHATSAPP_TOKEN=

# --- Tenant Admin Default ---
DEFAULT_TENANT_ADMIN_PASSWORD=          # Set a secure password for auto-created tenant admins

# --- Server ---
PORT=8000

# --- Monitoring (optional) ---
ENABLE_PROMETHEUS=False
